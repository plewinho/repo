<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book List</title>
    <style>
        .expensive { color: red; }
        .cheap { color: green; }
    </style>
</head>
<body>
    <h1>Lista książek</h1>
    
    <label for="sort-by">Sortuj:</label>
    <select id="sort-by" onchange="sortBooks()">
        <option value="title">Nazwa</option>
        <option value="price">Cena</option>
    </select>
    
    <ul id="book-list">
        {% for product in products %}
        <li class="{{ product.price > 2000 ? 'expensive' : 'cheap' }}" data-title="{{ product.name }}" data-price="{{ product.price }}">
            {{ product.name }} - {{ product.price }} PLN
        </li>
        {% else %}
        <li>Brak produktów</li>
        {% endfor %}
    </ul>
    
    <script src="/script.js"></script>
</body>
</html>
